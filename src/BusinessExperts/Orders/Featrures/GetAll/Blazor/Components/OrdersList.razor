@page "/orders"
@using BusinessExperts.Orders.Contracts.DTOs
@inject NavigationManager Nav
@inject HttpClient Http

<h3>Orders</h3>

@if (orders is null) {
    <p>Loading...</p>
} else if (orders.Count == 0) {
    <p>No orders.</p>
} else {
    <ul>
        @foreach (var o in orders) {
            <li>
                <a href="@($"/orders/{o.Id}")">Order @o.Id</a> - Customer: @o.CustomerId - Total: @o.Total
            </li>
        }
    </ul>
}

@code {
    private List<OrderDto>? orders;

    protected override async Task OnInitializedAsync() {
        // Demo: fetch a small list by calling /orders individually or provide a dedicated list endpoint later
        // For now, leave placeholder empty list so page renders
        orders = new();
    }
}
